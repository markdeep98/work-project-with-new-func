<table class="table">
  <thead class="table-borderless">
    <tr>
      <th scope="col">Questionnaire name</th>
      <th scope="col">Prepared by</th>
      <th scope="col">Prepared for</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td>
        <%= @questionnaire.title %>
      </td>
      <td>
        <%= @user.first_name %> <%= @user.last_name %>     
      </td> 
      <td>
        <%= @user.first_name %> <%= @user.last_name %> 
      </td>
      <td>
        <%= @questionnaire.status %>
      </td>
    </tr>
  </tbody>
</table>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= link_to "To questionnaires", :back ,class: 'btn btn-primary' %>
      <%= link_to "Add question +", new_questionnaire_question_path(@questionnaire.id) ,class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<br>
<table class="table">
  <thead class="table-borderless">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <% if @question == "" %>
    <div class="contailner">
      <div class="row">
        <div class="col-sm-12 mx-auto">
          <div>You don't have any questions yet.</div>
        </div>
      </div>
    </div>
  <% else %>
    <tbody>
      <% @question.each do |question| %>
        <% if @questionnaire.id == question.questionnaire_id %>
          <tr>
            <td><%= question.title %></td>
            <td>
                <%= link_to "Show", question_path(question.id), method: :get %> |
                <%= link_to "Edit", edit_question_path(question.id) %> |
                <%= link_to "Delete", question_path(question.id), method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
          </tr>
        <% end %>
      <% end %>
  <% end %>
  </tbody>
</table>


